# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ============================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# ============================================
# Option 1: Use single DATABASE_URL (recommended for Neon)
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Option 2: Individual database variables (if not using DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=drugsng_bot
# DB_USER=postgres
# DB_PASSWORD=your_password

# ============================================
# WHATSAPP CONFIGURATION
# ============================================
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here_secure_string

# ============================================
# ENCRYPTION & SECURITY
# ============================================
# Must be at least 16 characters long
ENCRYPTION_KEY=generate_a_32_character_hex_string_here

# ============================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================

# Flutterwave (https://dashboard.flutterwave.com)
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_SECRET_HASH=your_flutterwave_secret_hash

# Paystack (https://dashboard.paystack.com)
PAYSTACK_SECRET_KEY=your_paystack_secret_key

# Payment Redirect URL
PAYMENT_REDIRECT_URL=https://your-domain.com/payment/callback

# ============================================
# VOICE & NLP CONFIGURATION
# ============================================

# Voice Provider Options: whisper, google-cloud, assemblyai
# RECOMMENDED: whisper (best support for Nigerian languages)
VOICE_PROVIDER=whisper

# OpenAI Whisper API Key (https://platform.openai.com/account/api-keys)
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Google Cloud Speech-to-Text (optional, if using google-cloud provider)
# GOOGLE_CLOUD_API_KEY=your-google-api-key-here

# AssemblyAI (optional, if using assemblyai provider)
# ASSEMBLYAI_API_KEY=your-assemblyai-api-key-here

# NLP Configuration
NLP_CONFIDENCE_THRESHOLD=0.6
NLP_MAX_CONTEXT_MESSAGES=10

# Voice Processing
VOICE_MAX_DURATION_SECONDS=300
VOICE_TEMP_DIR=./temp/voice
VOICE_DELETE_AFTER_PROCESSING=true

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_TOKEN_EXPIRY_MINUTES=60
SESSION_IDLE_TIMEOUT_MINUTES=20
OWNER_EMAIL=admin@drugsng.com
OWNER_PASSWORD=your_secure_password_here

# ============================================
# EMAIL CONFIGURATION (Brevo/Sendinblue)
# ============================================
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@drugsng.com

# ============================================
# CLOUDINARY CONFIGURATION (Image Hosting)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# API & SERVICE CONFIGURATION
# ============================================
DRUGSNG_API_BASE_URL=https://api.drugsng.com
COMPANY_LOGO=https://drugsng.com/logo.png
PRODUCTION_HOST=your-production-host.com